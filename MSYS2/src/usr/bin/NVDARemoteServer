#!/bin/bash
if ! test -e /var/run/NVDARemoteServer
then
mkdir -p /var/run/NVDARemoteServer
fi
if ! test -e /var/log/NVDARemoteServer
then
mkdir -p /var/log/NVDARemoteServer
fi
if test $# -lt 1
then
echo "Usage: $0 start | stop | restart | status | debug | kill"
else
case "$1" in
status)
	if test -e /var/run/NVDARemoteServer/NVDARemoteServer.pid
	then
		echo NVDARemoteServer is running
	else
		echo NVDARemoteServer is stopped
	fi
	;;
*)
	/usr/bin/python -B /usr/share/NVDARemoteServer/server.py $*
	;;
esac
fi
